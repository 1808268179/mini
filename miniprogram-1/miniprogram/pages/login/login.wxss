/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
  background-color: #f7f8fa;
  padding: 80rpx 40rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #888;
  margin-top: 20rpx;
}

.login-button-wrapper {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.login-button {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background-image: linear-gradient(135deg, #4CAF50, #81C784);
  color: white;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(76, 175, 80, 0.3);
  transition: all 0.2s ease;
}

.login-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 8rpx rgba(76, 175, 80, 0.2);
}

.footer {
  font-size: 24rpx;
  color: #aaa;
  padding-bottom: 20rpx;
}
