/* pages/profile/profile.wxss */
.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 用户信息区域 */
.user-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 40rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  position: relative;
}

.avatar-wrapper {
  position: relative;
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
}

.avatar-border {
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  animation: rotate 10s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.user-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.logout-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  transition: all 0.3s ease;
}

.logout-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.logout-icon {
  width: 32rpx;
  height: 32rpx;
  filter: brightness(0) invert(1);
}

/* 登录提示区域 */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.default-avatar {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
}

.default-avatar image {
  width: 60rpx;
  height: 60rpx;
  filter: brightness(0) invert(1);
  opacity: 0.8;
}

.login-info {
  margin-bottom: 40rpx;
}

.prompt-text {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.login-benefits {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.benefit-item {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.login-btn {
  width: 300rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(76, 175, 80, 0.4);
  transition: all 0.3s ease;
  border: none;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.login-btn.loading {
  background: linear-gradient(135deg, #81C784, #66BB6A);
}

.loading-icon {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top: 3rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 数据统计区域 */
.stats-section {
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 菜单区域 */
.menu-section {
  margin: 0 20rpx;
}

.menu-group {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.menu-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx 30rpx 20rpx;
}

.menu-list {
  padding: 0 30rpx 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f8f8;
}

.menu-left {
  display: flex;
  align-items: center;
  position: relative;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
}

.badge {
  position: absolute;
  top: -8rpx;
  left: 45rpx;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  color: white;
  font-weight: bold;
  min-width: 20rpx;
  text-align: center;
  line-height: 1;
}

.badge-new {
  background: #ff4757;
}

.badge-number {
  background: #667eea;
}

.menu-arrow {
  width: 24rpx;
  height: 24rpx;
}

.menu-arrow image {
  width: 100%;
  height: 100%;
  opacity: 0.4;
}

/* 底部信息 */
.footer-section {
  margin-top: 40rpx;
  text-align: center;
  padding: 0 20rpx;
}

.app-info {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-right: 20rpx;
}

.app-version {
  font-size: 24rpx;
  color: #999;
  background: #f0f0f0;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.copyright {
  margin-bottom: 20rpx;
}

.copyright-text {
  font-size: 22rpx;
  color: #999;
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .stats-grid {
    flex-wrap: wrap;
  }
  
  .stat-item {
    width: 50%;
    margin-bottom: 20rpx;
  }
  
  .menu-text {
    font-size: 26rpx;
  }
}