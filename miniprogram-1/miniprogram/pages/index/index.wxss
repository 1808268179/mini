/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #f8f9fa, #e9ecef);
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.header {
  background: white;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-title {
  display: flex;
  align-items: center;
}

.title-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.header-actions {
  display: flex;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: #f8f9fa;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-bottom: 4rpx;
}

.action-text {
  font-size: 20rpx;
  color: #6c757d;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 500;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  padding: 0 30rpx 30rpx;
}

/* 图片显示区域 */
.image-section {
  margin-bottom: 30rpx;
}

.image-container {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.preview-image {
  width: 100%;
  max-height: 500rpx;
  background: #f8f9fa;
}

.image-actions {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
}

.action-button {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.action-button.primary {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.action-button.secondary {
  background: #f8f9fa;
  color: #6c757d;
  border: 2rpx solid #dee2e6;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

/* 识别结果区域 */
.result-section {
  margin-bottom: 30rpx;
}

.result-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.result-header {
  margin-bottom: 30rpx;
}

.result-title {
  margin-bottom: 20rpx;
}

.orchid-name {
  font-size: 42rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 8rpx;
}

.scientific-name {
  font-size: 26rpx;
  color: #6c757d;
  font-style: italic;
}

.confidence {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.confidence-text {
  font-size: 24rpx;
  color: #6c757d;
  min-width: 80rpx;
}

.confidence-bar {
  flex: 1;
  height: 8rpx;
  background: #e9ecef;
  border-radius: 4rpx;
  overflow: hidden;
}

.confidence-fill {
  height: 100%;
  background: linear-gradient(to right, #4CAF50, #66BB6A);
  border-radius: 4rpx;
  transition: width 0.6s ease;
}

.confidence-value {
  font-size: 24rpx;
  color: #4CAF50;
  font-weight: bold;
  min-width: 80rpx;
  text-align: right;
}

.result-content {
  border-top: 2rpx solid #f8f9fa;
  padding-top: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 20rpx;
}

.description {
  margin-bottom: 30rpx;
}

.description-text {
  font-size: 28rpx;
  color: #495057;
  line-height: 1.6;
}

.characteristics {
  margin-bottom: 30rpx;
}

.characteristic-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.characteristic-item {
  display: flex;
  align-items: center;
}

.characteristic-dot {
  color: #4CAF50;
  font-size: 32rpx;
  margin-right: 16rpx;
}

.characteristic-text {
  font-size: 26rpx;
  color: #495057;
}

.care-tips {
  background: linear-gradient(135deg, #e8f5e8, #f1f8f1);
  padding: 30rpx;
  border-radius: 16rpx;
  margin-top: 20rpx;
}

.care-text {
  font-size: 26rpx;
  color: #2d5016;
  line-height: 1.6;
}

/* 加载状态 */
.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 30rpx;
  text-align: center;
}

.loading-animation {
  display: flex;
  gap: 12rpx;
  margin-bottom: 40rpx;
}

.loading-circle {
  width: 16rpx;
  height: 16rpx;
  background: #4CAF50;
  border-radius: 50%;
  animation: bounce 1.4s ease-in-out infinite both;
}

.loading-circle:nth-child(1) { animation-delay: -0.32s; }
.loading-circle:nth-child(2) { animation-delay: -0.16s; }

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.loading-text {
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.loading-subtitle {
  font-size: 24rpx;
  color: #6c757d;
}

/* 空状态 */
.empty-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 30rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.6;
  margin-bottom: 40rpx;
}

.empty-title {
  font-size: 36rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #6c757d;
  line-height: 1.5;
}

/* 底部操作栏 */
.bottom-actions {
  padding: 30rpx;
  background: white;
  border-top: 2rpx solid #f8f9fa;
}

.choose-image-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(76, 175, 80, 0.3);
  border: none;
  transition: all 0.3s ease;
}

.choose-image-btn:active {
  transform: scale(0.98);
}

.choose-image-btn:disabled {
  background: #dee2e6;
  color: #6c757d;
  box-shadow: none;
}

.btn-icon-large {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.btn-text {
  font-size: 32rpx;
}

/* 历史记录弹窗 */
.history-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 40rpx 40rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 2rpx solid #f8f9fa;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  opacity: 0.6;
}

.history-list {
  flex: 1;
  padding: 20rpx 0;
}

.history-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 30rpx;
}

.empty-icon-small {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.4;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #6c757d;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #f8f9fa;
  transition: background-color 0.2s;
}

.history-item:active {
  background: #f8f9fa;
}

.history-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  background: #f8f9fa;
}

.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.history-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #2c3e50;
}

.history-time {
  font-size: 22rpx;
  color: #6c757d;
}

.history-confidence {
  font-size: 24rpx;
  color: #4CAF50;
}

.history-actions {
  padding: 20rpx;
}

.delete-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

/* 响应式设计 */
@media screen and (max-width: 400px) {
  .result-card {
    padding: 30rpx 20rpx;
  }
  
  .orchid-name {
    font-size: 36rpx;
  }
  
  .image-actions {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .action-button {
    width: 100%;
  }
}